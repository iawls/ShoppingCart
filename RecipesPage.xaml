<Page
    x:Class="ShoppingCart.RecipesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ShoppingCart"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock x:Name="RecipeHeader" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Recipes" VerticalAlignment="Top" FontSize="26.667"/>
        <CommandBar VerticalAlignment="Bottom" ClosedDisplayMode="Compact">
            <AppBarButton x:Name="NavigateToList" FontFamily="Segoe MDL2 Assets" Icon="Bookmarks" Label="List"
                    Width="50" Height="50" Background="Transparent" Click="Navigate_to_List_Click"/>
            <AppBarButton x:Name="AddRecipe" FontFamily="Segoe MDL2 Assets" Icon="Add" Label="Add"
                    Width="50" Height="50" Background="Transparent" Click="AddRecipeClick"/>
        </CommandBar>
    </Grid>

</Page>
